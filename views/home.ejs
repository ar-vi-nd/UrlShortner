<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body class="container my-2">
    <% if (locals.id) { %>
        <p>URL Generated: http://localhost:8001/api/url/<%= id %></p>
        <% } %>

    <form action="/api/url" method="POST">
        <div class="mb-3">
          <label for="exampleInputtext" class="form-label"><h2>Url Shortner</h2></label>
          <input type="text" class="form-control" id="exampleInputtext" name="redirecturl" aria-describedby="emailHelp" placeholder="Enter url to generate short url">
        </div>
       
        <button type="submit" class="btn btn-primary">Generate</button>
      </form>

      <div>
            
      </div>

      <% if (locals.urls) { %>
        <ul>
            <% urls.forEach(function(url) { %>
                <li><%= url.redirecturl %> ==> <%= url.shortId %> ==> <%= url.visitcount %></li>
            <% }); %>
        </ul>
    <% }  %>
   

  
    

      
        
      
    
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>